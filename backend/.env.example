# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================
# Copiar este archivo a .env y completar los valores

# Database (MySQL - Aiven o similar)
DATABASE_URL=mysql+aiomysql://user:password@host:port/database

# JWT Secret (generar con: openssl rand -hex 32)
SECRET_KEY=tu_secret_key_aqui
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Cloudinary (para subir imágenes)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# App Configuration
ENVIRONMENT=development
PORT=8001

# Frontend URL (para links en notificaciones)
# Desarrollo: http://localhost:5173
# Producción: https://tu-app.netlify.app
FRONTEND_URL=http://localhost:5173

# Gemini AI (Google - gratis con límites)
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash

# Grok AI (xAI - alternativa)
GROK_API_KEY=
GROK_MODEL=grok-3-mini

# Pexels API (imágenes gratuitas)
PEXELS_API_KEY=

# WhatsApp Business API (Meta Cloud API)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_BUSINESS_ACCOUNT_ID=
WHATSAPP_WEBHOOK_VERIFY_TOKEN=reclamos_municipales_2024

# CORS Origins (producción - separar por coma)
# CORS_ORIGINS=https://tu-app.netlify.app,https://otro-dominio.com

# Sentry (Error Tracking - opcional)
# SENTRY_DSN=

# Redis (opcional - para rate limiting avanzado)
# REDIS_URL=redis://localhost:6379/0

# Email SMTP (opcional)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_FROM=
# SMTP_FROM_NAME=Sistema de Reclamos
